{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/JustinGrote/AzurePolicyDefinitionSchema#",
  "title": "Azure Policy Definition",
  "description": "Azure Policy Definition: https://docs.microsoft.com/en-us/azure/governance/policy/concepts/definition-structure",
  "type": "object",
  "properties": {
    "properties": {
      "$ref": "#/$defs/policyDefinitionProperties"
    }
  },
  "$defs": {
    "policyDefinitionProperties": {
      "description": "Policy Definition Properties",
      "$comment": "We use this to override the Azure Version because it doesn't validate policyRule",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The display name of the policy definition."
        },
        "metadata": {
          "type": "object",
          "properties": {
            "version": {
              "type": "string",
              "description": "Tracks details about the version of the contents of a policy definition.",
              "maximum": 1024
            },
            "category": {
              "type": "string",
              "description": "Determines under which category in the Azure portal the policy definition is displayed.",
              "maximum": 1024
            },
            "preview": {
              "type": "boolean",
              "description": "Determines under which category in the Azure portal the policy definition is displayed.",
              "maximum": 1024
            }
          },
          "additionalProperties": {
            "maximum": 1024
          },
          "description": "The policy definition metadata."
        },
        "mode": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "NotSpecified",
                "Indexed",
                "All"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "The policy definition mode. Possible values are NotSpecified, Indexed, and All."
        },
        "parameters": {
          "description": "Required if a parameter is used in policy rule."
        },
        "policyRule": {
          "description": "The policy rule.",
          "$ref": "https://schema.management.azure.com/schemas/2020-10-01/policyDefinition.json"
        },
        "policyType": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "NotSpecified",
                "BuiltIn",
                "Custom"
              ]
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "The type of policy definition. Possible values are NotSpecified, BuiltIn, and Custom."
        }
      }
    }
  }
}
